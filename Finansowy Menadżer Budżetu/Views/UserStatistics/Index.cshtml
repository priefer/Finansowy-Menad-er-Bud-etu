@model UserStatisticsViewModel

@{
    ViewData["Title"] = "User Statistics";
}

<h2>Statystyki użytkownika</h2>

<form asp-action="Index" method="get">
    <div class="form-group">
        <label for="fromDate">From Date:</label>
        <input type="date" id="fromDate" name="fromDate" value="@Model.FromDate?.ToString("yyyy-MM-dd")" class="form-control" />
    </div>
    <div class="form-group">
        <label for="toDate">To Date:</label>
        <input type="date" id="toDate" name="toDate" value="@Model.ToDate?.ToString("yyyy-MM-dd")" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Filtruj</button>
</form>

<hr />

<p>Ilość transakcji: @Model.TotalTransactions</p>
<p>Wydatki: @Model.TotalAmount</p>
<p>Przychód: @Model.TotalIncome</p>
<p>Bilans: @Model.TotalExpenses</p>
<p>Wgranych plików: @Model.TotalFilesUploaded</p>
